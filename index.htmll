    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            background-color: #fff0f3;
            font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            position: relative;
        }

        /* Floating Animation Layer */
        #bg-layer {
            position: absolute;
            top: 0; left: 0; width: 100%; height: 100%;
            pointer-events: none;
            z-index: 1;
        }
        .float-item {
            position: absolute;
            bottom: -50px;
            color: rgba(255, 77, 109, 0.2);
            font-weight: bold;
            animation: moveUp 6s linear infinite;
        }
        @keyframes moveUp {
            to { transform: translateY(-110vh) rotate(20deg); opacity: 0; }
        }

        /* Container */
        .container {
            position: relative;
            z-index: 10;
            width: 100%;
            height: 100%;
        }
        .page {
            display: none;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 20px;
            width: 100%;
            height: 100%;
            position: absolute;
        }
        .active { display: flex; }

        h1 { font-size: 2.2rem; color: #ff4d6d; margin-bottom: 15px; min-height: 3.5rem; }
        p { font-size: 1.2rem; color: #555; max-width: 450px; line-height: 1.5; margin-bottom: 25px; min-height: 4.5rem; }

        .btn-next {
            padding: 15px 45px;
            font-size: 1.1rem;
            background: #ff4d6d;
            color: white;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            font-weight: bold;
            box-shadow: 0 5px 15px rgba(255, 77, 109, 0.3);
            transition: 0.3s;
        }

        /* Final Card */
        .card {
            background: white;
            padding: 2.5rem 1.5rem;
            border-radius: 30px;
            box-shadow: 0 15px 40px rgba(255, 77, 109, 0.15);
            max-width: 380px;
            width: 90%;
        }
        .btn-group { display: flex; justify-content: center; gap: 15px; margin-top: 25px; }
        .choice-btn { padding: 12px 25px; border-radius: 50px; border: none; font-weight: bold; cursor: pointer; }
        #yesBtn { background: #ff4d6d; color: white; }
        #noBtn { background: #adb5bd; color: white; transition: 0.1s; }

        .footer-num { position: absolute; bottom: 25px; font-weight: bold; color: #ff8fa3; font-size: 0.8rem; letter-spacing: 1px; }
    </style>
</head>
