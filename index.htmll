    <script>
        function type(el) {
            const message = el.getAttribute('data-msg');
            let i = 0;
            el.innerHTML = "";
            const interval = setInterval(() => {
                el.innerHTML += message.charAt(i);
                i++;
                if (i >= message.length) clearInterval(interval);
            }, 40);
        }

        function go(n) {
            const pages = document.querySelectorAll('.page');
            pages.forEach(p => p.classList.remove('active'));
            const activePage = document.getElementById('p' + n);
            activePage.classList.add('active');
            activePage.querySelectorAll('.txt').forEach(t => type(t));
        }

        function startFloats() {
            const layer = document.getElementById('bg-layer');
            const items = ['Love', 'Next', 'üíó', 'Anvuu', 'Care', 'Mine'];
            setInterval(() => {
                const el = document.createElement('div');
                el.className = 'float-item';
                el.innerHTML = items[Math.floor(Math.random() * items.length)];
                el.style.left = Math.random() * 90 + 'vw';
                el.style.fontSize = Math.random() * 10 + 15 + 'px';
                layer.appendChild(el);
                setTimeout(() => el.remove(), 6000);
            }, 600);
        }

        function run() {
            const btn = document.getElementById('noBtn');
            btn.style.position = 'fixed';
            btn.style.left = Math.random() * 80 + 'vw';
            btn.style.top = Math.random() * 80 + 'vh';
        }

        function celebrate() {
            document.getElementById('askCard').style.display = 'none';
            document.getElementById('success').style.display = 'block';
            for(let i=0; i<60; i++) {
                setTimeout(() => {
                    const h = document.createElement('div');
                    h.innerHTML = 'üíó';
                    h.style.position = 'fixed';
                    h.style.left = Math.random() * 100 + 'vw';
                    h.style.top = '-20px';
                    document.body.appendChild(h);
                    h.animate([{transform:'translateY(0)'},{transform:'translateY(110vh) rotate(360deg)'}], {duration: 3000}).onfinish = () => h.remove();
                }, i * 150);
            }
        }

        window.onload = () => {
            startFloats();
            // Start typing first page manually
            document.querySelectorAll('#p1 .txt').forEach(t => type(t));
        };
    </script>
