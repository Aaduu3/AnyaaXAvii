            <p>Will you be mine forever?</p>
            <div style="margin-top:20px;">
                <button id="yesBtn" onclick="done()">Yes!</button>
                <button id="noBtn" onmouseover="move()">No</button>
            </div>
        </div>
        <div id="yay" style="display:none">
            <div style="font-size: 80px;">üíç‚ú®</div>
            <h1 style="color:#ff4d6d">I'M YOURS!</h1>
            <p>Happy Propose Day!!ü´†<br>I Love You So Much!!!üíó</p>
        </div>
        <span class="footer-num">16 / 16</span>
    </div>

    <script>
        // NAVIGATION ENGINE
        function go(n) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            const next = document.getElementById('p' + n);
            next.classList.add('active');
            
            // Start typing reveal for h1 and p
            next.querySelectorAll('.tw').forEach(el => {
                const finalContent = el.innerHTML;
                el.innerHTML = "";
                let i = 0;
                const timer = setInterval(() => {
                    el.innerHTML += finalContent.charAt(i);
                    i++;
                    if(i >= finalContent.length) clearInterval(timer);
                }, 40);
            });
        }

        // NO BUTTON ENGINE
        function move() {
            const b = document.getElementById('noBtn');
            b.style.position = 'fixed';
            b.style.left = Math.random() * 80 + 'vw';
            b.style.top = Math.random() * 80 + 'vh';
        }

        // FINAL CELEBRATION
        function done() {
            document.getElementById('ask').style.display = 'none';
            document.getElementById('yay').style.display = 'block';
            for(let i=0; i<60; i++) {
                setTimeout(() => {
                    const h = document.createElement('div');
                    h.innerHTML = 'üíó';
                    h.style.position = 'fixed';
                    h.style.left = Math.random() * 100 + 'vw';
                    h.style.top = '-20px';
                    h.style.zIndex = '1000';
                    document.body.appendChild(h);
                    h.animate([{transform:'translateY(0)'},{transform:'translateY(110vh) rotate(360deg)'}], {duration: 3000}).onfinish = () => h.remove();
                }, i * 150);
            }
        }

        // BACKGROUND FLOATING ENGINE
        setInterval(() => {
            const d = document.createElement('div');
            d.className = 'float';
            d.innerHTML = ["Love","Anvuu","üíó","Next"][Math.floor(Math.random()*4)];
            d.style.left = Math.random() * 100 + 'vw';
            d.style.fontSize = Math.random() * 10 + 15 + 'px';
            document.getElementById('bg').appendChild(d);
            setTimeout(() => d.remove(), 6000);
        }, 700);
    </script>
</body>
