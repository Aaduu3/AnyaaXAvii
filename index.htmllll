    <script>
        function go(n) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            const next = document.getElementById('p' + n);
            next.classList.add('active');
            
            next.querySelectorAll('.tw').forEach(el => {
                const finalContent = el.innerHTML;
                el.innerHTML = "";
                let i = 0;
                const timer = setInterval(() => {
                    el.innerHTML += finalContent.charAt(i);
                    i++;
                    if(i >= finalContent.length) clearInterval(timer);
                }, 40);
            });
        }

        function move() {
            const b = document.getElementById('noBtn');
            b.style.position = 'fixed';
            b.style.left = Math.random() * 80 + 'vw';
            b.style.top = Math.random() * 80 + 'vh';
        }

        function done() {
            document.getElementById('ask').style.display = 'none';
            document.getElementById('yay').style.display = 'block';
            for(let i=0; i<60; i++) {
                setTimeout(() => {
                    const h = document.createElement('div');
                    h.innerHTML = ['ğŸ«','ğŸ’—','ğŸ©'][Math.floor(Math.random()*3)];
                    h.style.position = 'fixed';
                    h.style.left = Math.random() * 100 + 'vw';
                    h.style.top = '-20px';
                    h.style.zIndex = '1000';
                    document.body.appendChild(h);
                    h.animate([{transform:'translateY(0)'},{transform:'translateY(110vh) rotate(360deg)'}], {duration: 3000}).onfinish = () => h.remove();
                }, i * 150);
            }
        }

        setInterval(() => {
